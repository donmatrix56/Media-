<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"    android:padding="16dp"
    android:background="@drawable/ripple_sort_item"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/icon_sort_type"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:tint="@color/primary"
        tools:src="@drawable/ic_sort_az"
        android:contentDescription="Sort Type Icon" />

    <TextView
        android:id="@+id/text_sort_option"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/white"
        tools:text="Date Created" />

</LinearLayout>
